<config
        xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
        xmlns='http://www.ehcache.org/v3'
        xsi:schemaLocation="http://www.ehcache.org/v3
            http://www.ehcache.org/schema/ehcache-core-3.7.xsd">

    <persistence directory="cache-example/cache" />

    <cache-template name="default">
        <!-- ttl - TIME TO LIVE - ukupno vreme koje će objekti provesti u kešu bez obzira da li im se pristupa ili ne
            tti - TIME TO IDLE - ukupno vreme koje će objekti provesti u kešu ako im se ne pristupa -->
        <expiry>
            <ttl unit="seconds">15</ttl>
        </expiry>
        <listeners>
            <listener>
                <class>net.javaguides.springboot_jutjubic.logger.CacheLogger</class>
                <event-firing-mode>ASYNCHRONOUS</event-firing-mode>
                <event-ordering-mode>UNORDERED</event-ordering-mode>
                <events-to-fire-on>CREATED</events-to-fire-on>
                <events-to-fire-on>EXPIRED</events-to-fire-on>
                <events-to-fire-on>EVICTED</events-to-fire-on>
                <events-to-fire-on>REMOVED</events-to-fire-on>
            </listener>
        </listeners>

        <resources>
            <heap>1000</heap>
            <!-- 10MB u RAMu se čuva -->
            <offheap unit="MB">10</offheap>
            <!-- 20MB na disku se čuva -->
            <disk persistent="true" unit="MB">20</disk>
        </resources>
    </cache-template>

    <cache alias="loginAttempts" uses-template="default">
        <key-type>java.lang.String</key-type>
        <value-type>java.lang.Integer</value-type>

        <expiry>
            <ttl unit="seconds">60</ttl>
        </expiry>

        <resources>
            <heap unit="entries">1000</heap>
        </resources>
    </cache>

    <!-- ==================== DODAJ OVAJ CACHE ZA THUMBNAILS ==================== -->
    <cache alias="thumbnails">
        <!-- Key = ID video posta (Long), Value = thumbnail slika (byte[]) -->
        <key-type>java.lang.Long</key-type>
        <value-type>byte[]</value-type>

        <!-- Thumbnail se čuva 1 sat u kešu -->
        <expiry>
            <ttl unit="hours">1</ttl>
        </expiry>

        <!-- Logger će pratiti sve operacije -->
        <listeners>
            <listener>
                <class>net.javaguides.springboot_jutjubic.logger.CacheLogger</class>
                <event-firing-mode>ASYNCHRONOUS</event-firing-mode>
                <event-ordering-mode>UNORDERED</event-ordering-mode>
                <events-to-fire-on>CREATED</events-to-fire-on>
                <events-to-fire-on>UPDATED</events-to-fire-on>
                <events-to-fire-on>EXPIRED</events-to-fire-on>
                <events-to-fire-on>REMOVED</events-to-fire-on>
                <events-to-fire-on>EVICTED</events-to-fire-on>
            </listener>
        </listeners>

        <resources>
            <!-- Max 500 thumbnail-a u RAM-u -->
            <heap unit="entries">500</heap>
            <!-- 50MB za thumbnail slike -->
            <offheap unit="MB">50</offheap>
        </resources>
    </cache>

</config>